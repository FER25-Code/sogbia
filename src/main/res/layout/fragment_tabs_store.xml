<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="bold|italic"
            android:textColor="@color/grey_900"
            android:textSize="20dp"
            android:text=" SogBia ! Application de Covoiturage  pour
faciliter le transport aux plus âgées   en un clic." />

        <Button
            android:id="@+id/button"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bginput"
            android:onClick="Proposertrajet"
            android:text="@string/proposer_un_trajet" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bginput"
            android:onClick="rechercher"
            android:text="@string/rechercher" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="305dp"
            app:srcCompat="@drawable/sogbia" />
</LinearLayout>
